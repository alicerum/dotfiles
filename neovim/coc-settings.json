{
    "coc.preferences.hoverTarget": "float",
    "languageserver": {
        "golang": {
            "command": "$HOME/go/bin/gopls",
            "args": ["-remote", "auto"],
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"]
        },
        "haskell": {
	    "command": "haskell-language-server-wrapper",
	    "args": [
	        "--lsp"
	    ],
	    "rootPatterns": [
	        ".stack.yaml",
	        ".hie-bios",
	        "BUILD.bazel",
	        "cabal.config",
	        "package.yaml"
	    ],
	    "filetypes": [
	        "hs",
	        "lhs",
	        "haskell"
	    ]
	}
    }
}
